{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
     "typeRoots": ["./typings", "./node_modules/@types"],
    "strict": true,
    "jsx": "react-jsx",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "typings/**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
